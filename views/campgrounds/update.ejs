<% layout('layouts/boilerplate') -%>

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1 class="mt-3 text-center text-bg-warning p-2 rounded">Update Campground</h1>
		<form
			class="form-floating validation-form"
			action="/campgrounds/<%= findCamp.id %>?_method=PATCH"
			method="post"
			enctype="multipart/form-data"
			novalidate
		>
			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input
					name="campground[title]"
					type="text"
					class="form-control"
					id="title"
					value="<%= findCamp.title %>"
					required
				/>
				<div class="invalid-feedback">This is a required field !</div>
			</div>
			<div class="row">
				<div class="col-md-8 mb-3">
					<label for="location" class="form-label">Location</label>
					<input
						name="campground[location]"
						type="text"
						class="form-control"
						id="location"
						value="<%= findCamp.location %>"
						required
					/>
					<div class="invalid-feedback">This is a required field !</div>
				</div>
				<div class="col-md-4 mb-3">
					<label for="price" class="form-label">Price</label>
					<div class="input-group">
						<div class="input-group-text">&dollar;</div>
						<input
							name="campground[price]"
							type="number"
							class="form-control"
							id="price"
							step="0.01"
							value="<%= findCamp.price %>"
							required
						/>
						<div class="invalid-feedback">This is a required field !</div>
					</div>
				</div>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Upload more Images</label>
				<input class="form-control" type="file" name="image" id="image" multiple />
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea
					name="campground[description]"
					class="form-control"
					id="description"
					rows="3"
					required
				><%= findCamp.description %></textarea>
				<div class="invalid-feedback">This is a required field !</div>
			</div>
            <div class="row d-flex justify-content-center">
                <% findCamp.images.forEach((img, index) => { %>
                    <div class="form-check col-auto col-md-4">
                        <input class="form-check-input" type="checkbox" name="deleteImages[]" value=<%=img.filename%> id="image-<%= index %>">
                        <label class="form-check-label" for="image-<%= index %>">Delete?</label>
                        <img src=<%= img.url %> class="img-thumbnail" alt="...">
                    </div>
                <% }) %>    
            </div>
			<div class="row mt-3">
				<div class="col-md-3">
					<button type="submit" class="btn btn-warning">Update</button>
				</div>
				<div class="col-md-2 ms-auto">
					<a href="/campgrounds/<%= findCamp.id %>">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>
