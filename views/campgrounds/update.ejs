<% layout('layouts/boilerplate') -%>

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1 class="mt-3 text-center text-bg-warning p-2 rounded">Update Campground</h1>
		<form
			class="form-floating"
			action="/campgrounds/<%=findCamp.id%>?_method=PATCH"
			method="post"
		>
			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input
					name="title"
					type="text"
					class="form-control"
					id="title"
					value="<%= findCamp.title %>"
				/>
			</div>
			<div class="row">
				<div class="col-md-8 mb-3">
					<label for="location" class="form-label">Location</label>
					<input
						name="location"
						type="text"
						class="form-control"
						id="location"
						value="<%= findCamp.location %>"
					/>
				</div>
				<div class="col-md-4 mb-3">
					<label for="price" class="form-label">Price</label>
					<div class="input-group">
						<div class="input-group-text">&dollar;</div>
						<input
							name="price"
							type="number"
							class="form-control"
							id="price"
							step="0.01"
							value="<%= findCamp.price %>"
						/>
					</div>
				</div>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Image URL</label>
				<input
					name="image"
					type="text"
					class="form-control"
					id="image"
					value="<%= findCamp.image %>"
				/>
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea name="description" class="form-control" id="description" rows="3"><%= findCamp.description %> </textarea
				>
			</div>
			<div class="row">
				<div class="col-md-3">
					<button type="submit" class="btn btn-warning">Update</button>
				</div>
				<div class="col-md-2 ms-auto">
					<a href="/campgrounds/<%=findCamp.id%>">Cancel</a>
				</div>
			</div>
		</form>
	</div>
</div>
