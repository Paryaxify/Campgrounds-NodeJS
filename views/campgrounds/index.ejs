<% layout('layouts/boilerplate') -%>

<h1>All CampGrounds</h1>
<a href="/campgrounds/new">
    <input type="submit" value="+ Add New Campground"/>
</a>
<% for( let camp of camps ) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <img src="<%= camp.images[0].thumbnail %>" class="card-img-top" alt="camp-image"/>
            </div>
            <div class="col-md-8 card-body">
                <h5 class="card-title"><%= camp.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= camp.location %></h6>
                <p class="card-text"><%= camp.description %></p>
                <a href="/campgrounds/<%= camp.id %>" class="card-link">More Details</a>
            </div>
        </div>
    </div>
<% } %>
