<% layout('layouts/boilerplate') -%>

<style>
    .card .card-header {
        background-color: #fff;
        border-bottom: none;
    }
</style>

<div class="row justify-content-center">
    <div class="card shadow-lg border-0 rounded-lg mt-5 mx-auto text-center">
        <h1 class="card-header display-1 text-muted"> <%= err.message %> </h1>
        <div class="card-body mx-auto">
            <% if (process.env.NODE_ENV !== "production") { %>
                <p class="card-subtitle mb-3 text-muted"> <%= err.stack %></p>
            <% } %>
            
            <a type="button" href="/campgrounds"
               class="btn btn-sm btn-info text-white"> Back To Home </a>
        </div>
    </div>
</div>
