<% layout('layouts/boilerplate') -%>

<div class="row">
	<div class="col-md-6 offset-md-3">
		<h1 class="mt-3 text-center">Create a new campground</h1>
		<form class="form-floating" action="/campgrounds" method="post">
			<div class="mb-3">
				<label for="title" class="form-label">Title</label>
				<input name="title" type="text" class="form-control" id="title"/>
			</div>
			<div class="row">
				<div class="col-md-8 mb-3">
					<label for="location" class="form-label">Location</label>
					<input name="location" type="text" class="form-control" id="location"/>
				</div>
				<div class="col-md-4 mb-3">
					<label for="price" class="form-label">Price</label>
					<div class="input-group">
						<div class="input-group-text">&dollar;</div>
						<input name="price" type="number" step="0.01" class="form-control" id="price"/>
					</div>
				</div>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Image URL</label>
				<input
					name="image"
					type="text"
					class="form-control"
					id="image"
					value="https://images.unsplash.com/photo-1518602164578-cd0074062767?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
					placeholder="https://images.unsplash.com/photo-1518602164578-cd0074062767?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80"
				/>
			</div>
			<div class="mb-3">
				<label for="description" class="form-label">Description</label>
				<textarea name="description" class="form-control" id="description" rows="3"></textarea>
			</div>
			<div class="row">
				<div class="col-md-3">
					<button type="submit" class="btn btn-success">Create</button>
				</div>
				<div class="col-md-2 ms-auto">
					<a href="/campgrounds">Go Back</a>
				</div>
			</div>
		</form>
	</div>
</div>
