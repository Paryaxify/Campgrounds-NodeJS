<% layout('layouts/boilerplate') -%>

<div class="row mt-5">
    <div class="col-md-4 offset-md-4 bg-dark text-light">
        <h1 class="mt-3 text-center">Register</h1>
        <form action="/register" class ="form-floating validation-form" method="post">
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" type="email" class="form-control bg-dark border-secondary text-light" id="title" required/>
                <div class="invalid-feedback">This is a required field !</div>
            </div>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control bg-dark border-secondary text-light" id="username" required/>
                <div class="invalid-feedback">This is a required field !</div>
            </div>
            <div class="mb-5">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control bg-dark border-secondary text-light" id="password" required/>
                <div class="invalid-feedback">This is a required field !</div>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success">Sign Up</button>
            </div>
            <div class="col-md-2">
                <a href="/campgrounds">Go Back</a>
            </div>
        </form>
    </div>
</div>