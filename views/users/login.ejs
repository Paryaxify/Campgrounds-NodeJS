<% layout('layouts/boilerplate') -%>

<div class="row mt-5">
    <div class="col-md-4 offset-md-4">
        <h1 class="mt-3 text-center">Login</h1>
        <form action="/login" class ="form-floating validation-form" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" type="text" class="form-control bg-dark border-secondary text-light" id="username" required/>
                <div class="invalid-feedback">This is a required field !</div>
            </div>
            <div class="mb-5">
                <label for="password" class="form-label">Password</label>
                <input name="password" type="password" class="form-control bg-dark border-secondary text-light" id="password" required/>
                <div class="invalid-feedback">This is a required field !</div>
            </div>
            <div class="d-grid mb-3">
                <button type="submit" class="btn btn-success">Login</button>
            </div>
        </form>
        <p>Dont have an account ? <a href="/register">Sign Up</a> </p>
    </div>
</div>